border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ''

border-none()
  &:after
    display: none

bg-img($name)
  background-image: url($name + '@2x.png')
  @media(-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ration: 3)
    background-image: url($name + '@3x.png')